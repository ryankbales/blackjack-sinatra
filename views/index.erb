<h1>Let's play Blackjack!</h1>
<% if !session[:player_name] %>
  <form role="form" class="form-inline" action="/new_player" method="post">
    <div class="form-group">
      <input type="name" class="form-control" id="player_name" placeholder="Enter Name" name="player_name">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
<% else %>
  <h2>Hello <%= "#{session[:player_name]}" %>!</h2>
<% end %>